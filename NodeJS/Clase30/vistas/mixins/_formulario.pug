mixin formulario(cine = {})
	form(method="post",action="/agregar").light-blue.accent-3
		div.input-field
			input(type="text",id="nombre",name="nombre",placeholder="Ingrese el nombre del cine")
			label(for="nombre")
		div.input-field
			textarea(id="descripcion",name="descripcion",placeholder="Ingrese la descripción")
			label(for="descripcion") Descripción
		div.input-field
		- const listaTipos = ["PRIME", "3D", "2D", "XTREME"]
		each tipo in listaTipos
			label
				input(type="checkbox",id=tipo,name="tipos",value=tipo).filled-in
				span.opcion.white-text #{tipo}
		div.input-field
			button.btn.waves-effect.waves-light(type="submit") Guardar
